root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Настройки для всех файлов
[*]
indent_style = space
indent_size = 2

# Настройки для JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
max_line_length = 100

# Настройки для HTML
[*.html]
max_line_length = 120

# Настройки для CSS/SCSS
[*.{css,scss,sass}]
max_line_length = 120

# Настройки для JSON
[*.json]
max_line_length = off

# Настройки для Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false
